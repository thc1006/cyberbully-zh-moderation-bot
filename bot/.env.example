# CyberPuppy LINE Bot 環境變數設定範例
# 複製此檔案為 .env 並填入實際值

# LINE Bot 設定（必填）
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_CHANNEL_SECRET=your_channel_secret_here
LINE_WEBHOOK_URL=https://your-domain.com/webhook

# CyberPuppy API 設定
CYBERPUPPY_API_URL=http://localhost:8000
API_TIMEOUT=30.0
API_MAX_RETRIES=3

# 安全設定
MAX_MESSAGE_LENGTH=1000
RATE_LIMIT_PER_USER=20
SESSION_TIMEOUT_HOURS=24

# 回應行為設定
GENTLE_REMINDER_THRESHOLD=1
FIRM_WARNING_THRESHOLD=2
ESCALATION_THRESHOLD=3
COOLDOWN_HOURS=24

# 服務設定
BOT_PORT=8080
BOT_HOST=0.0.0.0
LOG_LEVEL=info

# 監控設定（可選）
ENABLE_METRICS=true
METRICS_PORT=9090