# CyberPuppy Docker Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# Model Configuration
BASE_MODEL=hfl/chinese-macbert-base
EMOTION_MODEL=hfl/chinese-roberta-wwm-ext
MAX_LENGTH=256
BATCH_SIZE=16

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=["*"]
API_WORKERS=4

# LINE Bot Configuration (Optional - for with-bot profile)
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_CHANNEL_SECRET=your_channel_secret_here
LINE_WEBHOOK_URL=https://your-domain.com/webhook

# Perspective API (Optional)
PERSPECTIVE_API_KEY=your_perspective_api_key_here
USE_PERSPECTIVE_API=false

# Safety Thresholds
TOXICITY_THRESHOLD=0.7
SEVERE_TOXICITY_THRESHOLD=0.85
EMOTION_NEGATIVE_THRESHOLD=0.8

# Performance Settings
USE_GPU=false  # Set to true if you have NVIDIA GPU with CUDA
GPU_DEVICE=0
NUM_WORKERS=4
REQUEST_TIMEOUT=30
MAX_BATCH_SIZE=32

# Redis Cache (Optional - for with-cache profile)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=3600

# Privacy Settings
LOG_USER_CONTENT=false
HASH_USER_IDS=true

# Path Configuration
DATA_DIR=./data
MODEL_DIR=./models
MODEL_CACHE_DIR=./models
CACHE_DIR=./cache

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
SECRET_KEY=change-this-to-a-random-secret-key