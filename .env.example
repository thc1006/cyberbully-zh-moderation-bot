# CyberPuppy Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# Model Configuration
BASE_MODEL=hfl/chinese-macbert-base
EMOTION_MODEL=hfl/chinese-roberta-wwm-ext
MAX_LENGTH=512
BATCH_SIZE=16

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=["*"]

# LINE Bot Configuration (Required for LINE integration)
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_CHANNEL_SECRET=your_channel_secret_here
LINE_WEBHOOK_URL=https://your-domain.com/webhook

# Perspective API (Optional)
PERSPECTIVE_API_KEY=your_perspective_api_key_here
USE_PERSPECTIVE_API=false

# Safety Thresholds
TOXICITY_THRESHOLD=0.7
SEVERE_TOXICITY_THRESHOLD=0.85
EMOTION_NEGATIVE_THRESHOLD=0.8

# Performance Settings
USE_GPU=true
GPU_DEVICE=0
NUM_WORKERS=4

# Privacy Settings
LOG_USER_CONTENT=false
HASH_USER_IDS=true

# Path Configuration (Optional - defaults to project structure)
# DATA_DIR=/path/to/data
# MODEL_DIR=/path/to/models
# CACHE_DIR=/path/to/cache